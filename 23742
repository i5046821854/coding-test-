#include <iostream>
#include <cstdio>
#include <algorithm>

using namespace std;

int arr[1000002];
bool cmp(int a, int b)
{
	return a > b;
}
int main(void)
{
	int num;
	cin >> num;
	for (long long i = 0; i < num; i++)
	{
		cin >> arr[i];
	}
	sort(arr, arr + num,cmp);
	long long sum = 0;
	long long temp = 0;
	int flag = 0;
	for (int i = 0; i < num; i++)
	{
		if (arr[i] >= 0)
		{
			sum += arr[i];
			temp = sum * (i+1);
		}
		else
		{
			if (flag == 0)
			{
				sum += arr[i];
				if (temp < sum * (i + 1))
				{
					temp = sum * (i + 1);
				}
				else
				{
					flag = 1;
					temp += arr[i];
				}
			}
			else {
				temp += arr[i];
			}
		}
		//printf("%d\n", temp);
	}

	printf("%lld", temp);
	return 0;
}
