#include <iostream>
#include <cstdio>
#include <algorithm>
#include <vector>

using namespace std;
vector<int> vec;
char arr[20000];
int N, K;

int main(void) {
	cin >> N >> K;
	for (int i = 0; i < N; i++)
	{
		cin >> arr[i];
		if (arr[i] == 'P')
			vec.push_back(i);
	}
	int result = 0;
	for (int i = 0; i < vec.size(); i++)
	{
		int num = K;
		int ai = vec[i];
		while(num > 0)
		{
			if (ai - num >= 0)
			{
				if (arr[ai - num] == 'H')
				{
					result++;
					arr[ai - num] = 'A';
					break;
				}
			}
			if(ai + num < K)
			{
				if (arr[ai + num] == 'H')
				{
					result++;
					arr[ai + num] = 'A';
					break;
				}
			}
			num--;
		}
	}
	for (int i = 0; i < N; i++)
	{
		printf("%c", arr[i]);
	}
	printf("\n%d", result);
}
