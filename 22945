#include <algorithm>
#include <iostream>
#include <cstdio>
#include <cstring>
#include <vector>

using namespace std;

int arr[100001];

int main(void)
{
	int num;
	cin >> num;
	for (int i = 0; i < num; i++)
	{
		cin >> arr[i];
	}
	int start = 0, end = num-1, result = 0;
	int gap, small;
	while(start < end)
	{
		gap = end - start - 1;
		small = min(arr[start], arr[end]);
		result = max(result, gap * small);
		if (min(arr[start + 1], arr[end]) > min(arr[start], arr[end - 1]))
		{
			start++;
		}
		else
			end--;
	}
	printf("%d", result);
	return 0;
}
